#!/usr/bin/env bash

BUILD_TYPE="internal debug"
ARGS=()
while [ $# -gt 0 ]; do
  case "$1" in
    -t)
      BUILD_TYPE="$2"
      shift 2
      ;;
    *)
      ARGS+="$1"
      shift
      ;;
  esac
done

qmake BUILD_TYPE="${BUILD_TYPE}" -spec linux-g++-64 QMAKE_LINK="${CXX}" QMAKE_LINK_SHLIB="${CXX}" "${ARGS[@]}"

